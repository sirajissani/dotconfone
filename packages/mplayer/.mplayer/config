# Write your default config options here!

# Console colors
msgcolor=no
msgmodule=yes

## It's better to leave this enabled on Windows, since the console is slow.
quiet=yes

## Fancy Color Messages
msgcolor=no
msgmodule=yes

## Frame dropping
#framedrop=yes

## drive letter of your DVD
#dvd-device=d:

## Uncomment this for AC-3 passthrough.
#afm=hwac3

## Multithreaded decoding on supported codec
lavdopts=threads=4

## You can use the DirectX or OpenGL video output, default is directx.
## For Vista or later you should avoid using directx vo, it will
## disable Aero
#vo=directx
vo=direct3d
#vo=gl2

## video filtering and postprocessing
## eq is useful if your video card does not support video overlay.
#vf=pp,eq
#vf=eq,pp=lb/hb/vb
#noslices=1

#Subtitles
utf8=1
ass=yes
ass-color=FFFFFF00
ass-border-color=00000020
ass-hinting=0
ass-font-scale=1.1
ass-force-style=Outline=1.1,font="CronosPro-Regular",pos=0

## Fontconfig
fontconfig=yes
#subfont-encoding="unicode"
font=CronosPro-Regular
subfont-autoscale=3
subfont-osd-scale=2
sub-fuzziness=1

#Scaling to screen size
vf=scale=1920:-3::
vf=scale=1920:-3,expand=1920:1080 # scale video to width

#Software Vol Ctrl
softvol=yes
softvol-max=400

# Multi-threading
#lavdopts=threads=4
